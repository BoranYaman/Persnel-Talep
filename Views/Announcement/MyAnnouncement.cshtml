<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 20px;
    }
    
    .announcement-list {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    
    .announcement-list h2 {
        text-align: center;
        color: #333;
    }
    
    .announcement-item {
        border-bottom: 1px solid #ddd;
        padding: 15px 0;
    }
    
    .announcement-header h3 {
        margin: 0;
        color: #007BFF;
    }
    
    .announcement-header p {
        margin: 5px 0;
        color: #555;
    }
    
    .announcement-body p {
        margin: 10px 0 0;
        color: #333;
    }
    
    .announcement-item:last-child {
        border-bottom: none;
    }
    
    .pagination {
        display: flex;
        justify-content: center;
        padding: 15px 0;
    }
    
    .pagination a {
        color: #007BFF;
        padding: 8px 16px;
        text-decoration: none;
        margin: 0 4px;
        border-radius: 4px;
        border: 1px solid #ddd;
    }
    
    .pagination a.active {
        background-color: #007BFF;
        color: white;
        border: 1px solid #007BFF;
    
    }
     .scrollable {
                max-height: 600px; 
                overflow-y: auto;
            }
    
    
    </style>
    <div class="announcement-list">
        <h2>Duyuru Listesi</h2>
        <div class="announcement-container">
            <div class="scrollabled">
            @foreach(var announcement in Model)
            {
                
                <div class="announcement-item" >
                    <div class="announcement-header" style="margin-top: 3%;">
                        @if(@announcement.Situation == "Yayında"){
                            <button class="btn btn-success" style="margin-right: 210%; margin-top: -7%;">@announcement.Situation</button>
                        }
                        else{
                            <button class="btn btn-danger" style="margin-right: 210%; margin-top: -7%;">@announcement.Situation</button>

                        }
                     
                        <h3>Duyuru Başlığı: @announcement.AnnouncementTitle</h3>
                        <p><strong>Birim:</strong>@announcement.AnnouncementDepartment </p>
                        <p><strong>Yapan Kişi:</strong> @announcement.ThePublisher</p>
                        <p><strong>Tarih:</strong> @announcement.DataTime</p>
                    </div>
                    <div class="announcement-body">
                        <p>@announcement.AnnouncementText</p>
                    </div>
                </div>
                <div class="container" style=" margin-left: 70%;padding-top: 5%;width: 15em;margin-top: -10%;">
                <a asp-controller="Announcement" asp-action="AnnouncementUpdate" asp-route-id="@announcement.Id"> <button class="btn btn-primary">Güncelle</button></a>
                <a asp-controller="Announcement" asp-action="AnnouncementDelete" asp-route-id="@announcement.Id"> <button class="btn btn-danger">Sil</button></a>


            </div>
            }
        </div>
    
        </div>
    </div>
            
           
            
        </div>
    