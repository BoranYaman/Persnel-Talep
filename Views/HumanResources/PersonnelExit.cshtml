@model UserOperations.ViewModels.UserViewModel




  
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .custom-table {
      border-collapse: separate;
      border-spacing: 0 10px;
    }
    .custom-table thead th {
      background-color: #343a40;
      color: white;
      border: none;
    }
    .custom-table tbody tr {
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .custom-table tbody tr:hover {
      background-color: #f8f9fa;
    }
    .custom-table th, .custom-table td {
      padding: 1rem;
      border-top: none;
    }
  </style>

  <h3 style="text-align: center;">Personel Çıkış</h3>

  <div class="container mt-5">
    <table class="table custom-table">
      <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Adı</th>
          <th scope="col">Soyad</th>
          <th scope="col">Mail Adresi</th>
          <th scope="col">Departman</th>
          <th scope="col">İşlem</th>


        </tr>
      </thead>
      <tbody>
        @foreach(var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.LastName</td>
                <td>@user.EmailAddress</td>
                <td>@user.Department</td>
                <td>
                  <a asp-controller="HumanResources" asp-action="PersonnelExitt"asp-route-id="@user.Id"><button class="btn btn-primary">Personel Çıkış</button></a>  
              </td>
            </tr>
        }
       
      </tbody>
    </table>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
