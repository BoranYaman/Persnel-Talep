@model UserOperations.ViewModels.UserEditViewModel

  <title>Personel İşten Çıkış</title>
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .form-container {
      max-width: 600px;
      margin: 0 auto;
      padding: 2rem;
      background-color: #f8f9fa;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .form-group {
      margin-bottom: 1rem;
    }
    .form-group label {
      font-weight: bold;
    }
    h3 {
      text-align: center;
      margin-bottom: 1.5rem;
    }
  </style>

  <div class="container mt-5">
    <div class="form-container">
      <h3>Personel Güncelle</h3>
      <form asp-action="UserEdit" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
          <label asp-for="UserName">Personel Adı</label>
          <input asp-for="UserName" type="text" class="form-control" placeholder="Ad" readonly >
        </div>
        <div class="form-group">
          <label asp-for="LastName">Personel Soyadı</label>
          <input asp-for="LastName" type="text" class="form-control" placeholder="Soyad"  readonly>
        </div>
        <div class="form-group">
          <label asp-for="PhoneNumber">Telefon Numarası</label>
          <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Telefon Numarası" readonly >
        </div>
       
        <div class="form-group">
          <label asp-for="EmailAddress">Mail</label>
          <input asp-for="EmailAddress" type="email" class="form-control" placeholder="Email" readonly>
        </div>
       
        <div class="form-group">
          <label asp-for="Address">Adres</label>
          <input asp-for="Address" class="form-control" placeholder="1234 Main St" readonly>
        </div>
        <div class="form-group">
          <label asp-for="Note">Not</label>
          <input asp-for="Note" class="form-control" placeholder="Not" readonly>
        </div>
        <div class="form-group">
            <label asp-for="WorkingStatus">Çalışma Durumu</label>
            <select asp-for="WorkingStatus" class="form-select">
              <option></option>
              <option>Çalışıyor</option>
              <option>Çalışmıyor</option>
            </select>
          </div>
        <div class="form-group">
            <label asp-for="ReasonForLeavingJob">İşten Ayrılma Nedeni</label>
            <select asp-for="ReasonForLeavingJob" class="form-select">
              <option></option>
              <option>Kendi İsteği</option>
              <option>Disiplin Suçu</option>
              <option>Performans Eksikliği</option>
            </select>
          </div>
          <div class="form-group">
            <label asp-for="ReasonForLeavingJobText">Detay:</label>
            <textarea asp-for="ReasonForLeavingJobText" class="form-control" rows="3" ></textarea>
        </div>
        
        <button type="submit" class="btn btn-primary w-100">Kaydet</button>
      </form>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
