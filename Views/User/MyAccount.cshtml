@model UserOperations.ViewModels.UserEditViewModel

<style>
  body {
      background-color: #f8f9fa;
  }

  .form-container {
      background-color: #fff;
      border-radius: 10px;
      padding: 30px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      margin-top: 50px;
  }

  .form-title {
      text-align: center;
      font-size: 1.5rem;
      font-weight: bold;
      margin-bottom: 20px;
  }

  .form-group label {
      font-weight: 600;
  }

  .form-control {
      border-radius: 5px;
  }

  .form-container textarea {
      resize: none;
  }
</style>

<div class="container">
    <div class="form-container" style="width: 40em; margin-left: auto; margin-right: auto;">
        <div class="form-title">Kullanıcı Bilgilerim</div>
        <form asp-action="MyAccount" method="post">
            <input type="hidden" name="id" value="@Model.Id" />

            <div class="form-group">
                <label asp-for="UserName">Kullanıcı Adı:</label>
                <input asp-for="UserName" type="text" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label asp-for="LastName">Soyadı:</label>
                <input asp-for="LastName" type="text" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber">Telefon Numarası:</label>
                <input asp-for="PhoneNumber" type="text" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress">Mail Adresi:</label>
                <input asp-for="EmailAddress" type="email" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label asp-for="Department">Departman:</label>
                <input asp-for="Department" type="text" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label asp-for="Position">Unvan:</label>
                <input asp-for="Position" type="text" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label asp-for="Address">Adres:</label>
                <textarea asp-for="Address" class="form-control" rows="3" readonly></textarea>
            </div>
        </form>
    </div>
</div>
